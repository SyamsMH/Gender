                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Nose Long"
                            android:textColor="@color/coral"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="int64"
                            android:textColor="@color/coral"
                            android:textSize="14sp"
                            android:padding="8dp"
