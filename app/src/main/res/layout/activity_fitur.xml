                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Forehead Width Cm"
                            android:textColor="@color/coral"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"/>

